
public class pattern {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int i,j,k,m,n;
		k=4;
		m=10;
		String str;
		
		for(i=1;i<=4;i++)
		{
			for(j=1;j<=k;j++)
			{
				n=k-j;
				for(n=1;n<k-j;n++)
				{
					System.out.print("");
				}
				System.out.print(m);
				m--;
				
			}
			System.out.println("");
			k--;
		}
	}

}
